<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="/css/carrito.css"> -->
    <link rel="stylesheet" href="/css/modo.css">

</head>
<body>
  <main class="container mt-2">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="/">
              <svg xmlns="http://www.w3.org/2000/svg" class="text-danger" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 18V5l12-2v13"></path>
                <circle cx="6" cy="18" r="3"></circle>
                <circle cx="18" cy="16" r="3"></circle>
              </svg>
              <span class="ms-2">Canto Rodado</span>
            </a>

            <!-- Menu items -->
            <div class="contendor-nav d-flex justify-content-center align-items-center ms-auto gap-3">
                <a class="nav-link d-flex align-items-center p-3" href="/bienvenida.html"><i class="bi bi-person me-1"></i>Salir</a>

                <!-- Botón modo oscuro -->
                <button id="modo-oscuro" class="btn d-flex align-items-center p-3">
                  <i id="icono-modo" class="bi bi-moon-fill"></i>
                </button>

            </div>
          </div>
        </nav>
      </header>

      <section id="principal">
          <h2 id="saludo" class="m-0 border-top bg-light text-center p-5"> Dashboar </h2>
          
          <div id="filtros" class="d-flex justify-content-between align-items-center p-2">
            <div class="d-flex gap-2">
              <button type="button" id="filtro-guitarra" class="btn btn-outline-danger"> Guitarras </button>
              <button type="button" id="filtro-pianos" class="btn btn-outline-danger"> Pianos </button>
            </div>

            <!-- Botón Alta -->
            <a href="/admin/alta-producto" class="btn btn-danger"> Alta producto</a>
          </div>

          <div id="productos" class="row g-4 mt-2">
            <h4 class="text-center text-muted mt-5">⚠ Falta conectar productos desde backend</h4>
          </div>
          <div class="d-flex justify-content-center mt-3 gap-3">
            <button id="pagina-anterior" class="btn btn-dark">Anterior</button>
            <span>Página <span id="pagina-actual">1</span> de <span id="total-paginas">1</span></span>
            <button id="pagina-siguiente" class="btn btn-dark">Siguiente</button>
          </div>

      </section>

    </main>
    <script type="module" src="/admin/public/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
